@model List<EBook.DataAccess.NetCore.DTO.Book>
@{
    var code = ViewBag.ErrorCode;
      var message = ViewBag.ErrorMessage;
}
<table class="table">
    <thead>
        <tr>
            <th>BookId</th>
            <th>BookName</th>
            <th>PublishDate</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>

        @if (!string.IsNullOrEmpty(message))
        {
            <tr class="">
                <td colspan="4"> 
                     <input type="hidden" value="@code" id="txtErrorCodeResponseFromServer"/>
                   <input type="hidden" value="@message" id="txtErrorResponseFromServer"/>
                   </td>
            </tr>
        }
        else
        {
            if (Model != null && Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    <tr class="product_index_@item.BookID">

                        <td>@item.BookID</td>
                        <td>@item.BookName</td>
                        <td>@item.PublishDate</td>
                        <td>
                            <a data-productid="@item.BookID" onclick="Product_Delete(@item.BookID)">
                                <i class="fa fa-trash">Xóa</i>
                            </a>
                            |

                        </td>

                    </tr>
                }
            }
        }
    </tbody>
</table>
