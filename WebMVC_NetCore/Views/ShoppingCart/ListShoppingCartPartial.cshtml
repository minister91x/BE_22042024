@model List<WebMVC_NetCore.Models.ShopingCartModels>

<table class="table">
    <thead>
        <tr>

            <th>ProductName</th>
            <th>Image</th>
            <th>Số lượng</th>
            <th>Thành tiền</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            foreach (var item in Model)
            {
                var totalAmount = item.Price * item.Quantity;
                <tr class="product_index_@item.ProductID">

                    <td>@item.ProductName</td>
                    <td><img src="@item.Image" style="width:150px;height:150px;" /></td>
                    <td>
                        <input type="number" class="form-control" id="txtCartQuantity"
                         data-productid=@item.ProductID
                           data-productname=@item.ProductName
                           data-image=@item.Image
                           data-price=10

                        onchange="UpdateCart(this)" style="width:25%" value="@item.Quantity" />
                    </td>
                    <td>
                        @totalAmount
                    </td>
                    <td>
                        <a data-productid=@item.ProductID
                   data-productname=@item.ProductName
                   data-image=@item.Image
                   data-price=10
                   onclick="RemoveItemFromCart(this)">Xóa</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>